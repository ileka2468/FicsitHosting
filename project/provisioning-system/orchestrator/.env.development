# Development Environment Configuration for Fast Heartbeat Testing
# Copy this file to .env in the orchestrator directory or set these environment variables

# Fast heartbeat configuration for development
HEARTBEAT_INTERVAL=10000        # Check every 10 seconds (default: 120000ms = 2 minutes)
HEALTH_CHECK_INTERVAL=10000     # Check every 10 seconds (default: 120000ms = 2 minutes)  
TIMEOUT_MINUTES=0.5             # Timeout after 30 seconds (default: 3 minutes)

# Host Agent fast heartbeat (set in host-agent docker-compose.yml environment)
# HEARTBEAT_INTERVAL=10         # Send heartbeat every 10 seconds (default: 60)
# HEARTBEAT_TIMEOUT=5           # Timeout after 5 seconds (default: 10)
# MAX_HEARTBEAT_FAILURES=2      # Re-register after 2 failures (default: 3)

# Other useful development settings
SHOW_SQL=true                   # Show SQL queries in logs
LOG_LEVEL=DEBUG                 # Enable debug logging

# Database Configuration
POSTGRES_PASSWORD=changeme123
REDIS_PASSWORD=changeme123

# Application Configuration (update these for your environment)
PUBLIC_IP=YOUR_VPS_PUBLIC_IP
RATHOLE_HOST=YOUR_VPS_IP
RATHOLE_TOKEN=your_secret_token_here

# Rathole Instance Manager Configuration (for per-server tunnel architecture)
RATHOLE_INSTANCE_MANAGER_HOST=YOUR_VPS_IP
RATHOLE_INSTANCE_MANAGER_PORT=7001

# pgAdmin Configuration
PGADMIN_PASSWORD=admin123
