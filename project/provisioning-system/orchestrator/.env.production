# Orchestrator Configuration - PRODUCTION MODE
# Copy this file to .env for production mode

# Health Check Configuration (Production Settings)
HEARTBEAT_INTERVAL=120000       # Check every 2 minutes (default: 120000ms)
HEALTH_CHECK_INTERVAL=120000    # Check every 2 minutes (default: 120000ms)  
TIMEOUT_MINUTES=3               # Timeout after 3 minutes (default: 3 minutes)

# Database Configuration (override as needed)
POSTGRES_PASSWORD=changeme123
REDIS_PASSWORD=changeme123

# Application Configuration (update these for your environment)
PUBLIC_IP=YOUR_VPS_PUBLIC_IP
RATHOLE_HOST=YOUR_VPS_IP
RATHOLE_TOKEN=your_secret_token_here

# Rathole Instance Manager Configuration (for per-server tunnel architecture)
RATHOLE_INSTANCE_MANAGER_HOST=YOUR_VPS_IP
RATHOLE_INSTANCE_MANAGER_PORT=7001

# JPA Configuration
SHOW_SQL=false                  # Don't show SQL queries in production
LOG_LEVEL=INFO                  # Production logging level

# pgAdmin Configuration
PGADMIN_PASSWORD=admin123

# To enable production mode:
# 1. Copy this file: cp .env.production .env
# 2. Update the placeholder values above for your environment
# 3. Restart: docker-compose down && docker-compose up -d
